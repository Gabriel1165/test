Height=float(input("Entrez votre taille en centimètres: "))
Weight=float(input("Entrez votre Poids en Kg: "))

Height = Height/100
BMI=Weight/(Height*Height)

print("votre indice de masse corporelle est: ",BMI)

if(BMI>0):
    if(BMI<=16):
        print("vous souffrez d'une grave insuffisance pondérale")    

    elif(BMI<=18.5):
        print("Vous êtes en sous-poids")

    elif(BMI<=25):
        print("Jurer pas bien !")

    elif(BMI<=0):
        print("Vous êtes en surpoids")

    else: 
        print("vous êtes gravement en surpoids")

print("FIN: ",BMI)

Height = Height/1000

if(Height > 0.5):
    try:
        Height++
